<h1 class="mb-4"><%= @property_presenter.name %></h1>

<div class="mb-3">
  <% PropertyPresenter::BASIC_INFO.each do |key, value| %>
    <div>
      <span><b><%= key %></b></span>: <span><%= @property_presenter.send(value) %></span>
    </div>
  <% end %>
</div>

<div class="mb-3">
  <% PropertyPresenter::STATS_INFO.each do |key, value| %>
    <div>
      <span><b><%= key %></b></span>: <span><%= @property_presenter.send(value) %></span>
    </div>
  <% end %>
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Floor</th>
      <th>Base Rent</th>
    </tr>
  </thead>
  <tbody>
    <% @tenant_presenters.each do |tenant_presenter| %>
      <tr class="tenant-item">
        <td><%= link_to tenant_presenter.name, tenant_path(tenant_presenter) %></td>
        <td><%= tenant_presenter.floor %></td>
        <td><%= tenant_presenter.base_rent %></td>
      </tr>
    <% end %>
  </tbody>
</table>
